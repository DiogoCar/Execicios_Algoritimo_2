      if (relo >= 24)
      
       {JOptionPane.showMessageDialog(null, "O relogio vai até 24 horas!");}
              if (relo == 7 || relo == 8 || relo == 9 || relo == 10)
      
       {JOptionPane.showMessageDialog(null, "Bom dia! São " + relo +" horas.");} else {JOptionPane.showMessageDialog(null, "São " + relo +" horas.");}
       
